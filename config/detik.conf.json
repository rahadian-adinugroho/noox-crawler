{
    "sitename": "detik",
    "url": "http://detik.com",
    "sitemapindex_regex": "",
    "url_regex": "^(?:http|https)://([a-zA-Z]*)\\.detik\\.com(?!\\/infografis)(?!\\/suara)(?:.{,15}\\/read|.{,25}d-[0-9]+|.{25}\\/berita)\\/.+$",
    "crawl_depth": 1,
    "title_tag": "h1",
    "title_attr": null,
    "title_attr_val": null,
    "author_tag": ["div", "span"],
    "author_attr": "class",
    "author_attr_val": "author",
    "author_regex": "((?:[a-zA-Z]+\\s)*[a-zA-Z]+)\\s+-",
    "article_tag": "div",
    "article_attr": "class",
    "article_attr_val": "detail_text|text_detail",
    "date_tag": ["div", "span"],
    "date_attr": "class",
    "date_attr_val": "date",
    "date_regex": "",
    "normalize_date": true,
    "article_bs_remove": [
        {
            "tag": "div",
            "attr": "class",
            "attr_val": "box_hl wpgal |boxlr mt15"
        }
    ],
    "article_tag_replace": 
    {
        "<br>": "<br>",
        "<br/>": "<br/>",
        "<strong>" : "<strong>",
        "</strong>" : "</strong>",
        "<b>" : "<b>",
        "</b>" : "</b>",
        "<em>" : "<em>",
        "</em>" : "</em>"
    },
    "article_regex_remove" : 
    [
        "(?:<table.*?<\\/table>)",
        "(?:\\[.+?Video.*?\\])"
    ]
}